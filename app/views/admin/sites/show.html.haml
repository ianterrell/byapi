- breadcrumbs :root, @site

%p
  %strong
    Domain:
  = @site.domain

%p
  %strong
    Default Category:
  = @site.default_category.name
  
%p
  %strong
    Patterns:  
    = link_to @site.patterns.count, [:admin, @site, :patterns]
%p
  %strong
    Designs:  
    = link_to @site.designs.count, [:admin, @site, :designs]

%p
  %strong
    Unapproved Designs:
    = link_to @site.designs.unapproved.count, unapproved_admin_site_designs_path(@site)

= link_to 'Edit', edit_admin_site_path(@site)
= link_to 'Back', admin_sites_path
