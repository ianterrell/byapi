%h2= @design.title
= image_tag(@design.image.url)

= render :partial => "purchase", :locals => { :design => @design }
= render :partial => "social", :locals => { :design => @design }

%ul.transcript
  - @design.properties.each_pair do |key, value|
    %li="#{key.titleize}: #{value}"
  %li= "Category: #{@design.category.name}"
  %li= "Tagged with: #{@design.tag_list}"